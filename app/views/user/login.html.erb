<%= form_for @user, :url => {:action => "login"}, :html => {:class => "form-horizontal"} do |u| %>
    <div class="control-group">
        <label class="control-label">Email</label>
        <div class="controls">
            <%= u.text_field :uemail %>  
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Password</label>
        <div class="controls">
            <%= u.password_field :passwd %>
        </div>
    </div>

    <div class="control-group">
        <label class="control-label"></label>
        <div class="controls">
            <%= u.submit "Login", {:class => "btn"} %>
            <%= link_to "Registe", {:action => "new"}, {:class => "btn"} %>
        </div>
    </div>
<% end %>